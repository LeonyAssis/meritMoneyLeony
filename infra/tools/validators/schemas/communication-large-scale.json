{
  "type": "object",
  "id": "communication-large-scale.json",
  "properties": {
    "communication_type": {
      "type": "string",
      "enum": [
        "ticket",
        "sms",
        "whatsapp"
      ]
    },
    "subject": {
      "$ref": "defs.json#/definitions/longText"
    },
    "message": {
      "$ref": "defs.json#/definitions/longText"
    },
    "classification_type_id": {
      "type": ["integer", "null"],
      "minimum": 1
    },
    "avaliation_status_id": {
      "type": ["integer", "null"],
      "minimum": 1
    },
    "category_id": {
      "type": ["string", "null"]
    },
    "subject_id": {
      "type": ["integer", "null"],
      "minimum": 1
    },
    "queue_id": {
      "type": ["integer", "null"],
      "minimum": 1
    },
    "owner_id": {
      "type": ["integer", "null"],
      "minimum": 1
    },
    "create_note": {
      "$ref": "defs.json#/definitions/positiveNumber"
    },
    "archive": {
      "type": ["integer", "null"],
      "minimum": 0
    },
    "user_id": {
      "$ref": "defs.json#/definitions/positiveInt"
    },
    "from": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "type_from": {
      "type": "string",
      "enum": [
        "account",
        "document"
      ]
    },
    "total_amount_to_process": {
      "$ref": "defs.json#/definitions/positiveInt"
    },
    "scheduled_at": {
      "$ref": "defs.json#/definitions/dateTime"
    },
    "video_url": {
      "type": ["string", "null"],
      "pattern": "^(https:\/\/www.loom.com\/embed\/)+[0-z]*$"
    }
  },
  "required": [
    "communication_type",
    "subject",
    "message",
    "user_id",
    "from",
    "type_from"
  ]
}
